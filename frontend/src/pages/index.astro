---
//para que Tailwind funcione
import '../styles/global.css'; 
---


<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Focus - Estudia Mejor</title>
	</head>
	<body style="margin: 0; min-height: 100vh; font-family: 'Omnes', system-ui, sans-serif; background-image: url('/background_coffe.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed; display: flex; flex-direction: column; align-items: center; justify-content: space-between; padding: 2rem 1.5rem;">
        
        <!-- Título bienvenida -->
        <h1 style="font-size: 3rem; font-weight: 700; color: #3C2A20; margin: 0; text-align: center;">¡Bienvenido!</h1>

        <!-- Imagen de las tazas -->
        <div style="flex: 1; display: flex; align-items: center; justify-content: center; padding: 1rem 0;">
            <img src="/assets/tazas_bienvenida.png" alt="Tazas de Focus" style="max-width: 100%; max-height: 45vh; object-fit: contain;" />
        </div>

        <!-- Botones y footer -->
        <div style="width: 100%; max-width: 400px; display: flex; flex-direction: column; gap: 1rem; align-items: center;">
            
            <!-- Botón Iniciar Sesión -->
            <a href="/login" style="width: 100%; background-color: #38491E; color: white; font-size: 1.125rem; font-weight: 600; padding: 1rem 2rem; border-radius: 9999px; text-align: center; text-decoration: none; box-shadow: 0 2px 8px rgba(0,0,0,0.15);">
                Iniciar Sesión
            </a>
            
            <!-- Botón Registrarse -->
            <a href="/register" style="width: 100%; background-color: transparent; border: 2px solid #3C2A20; color: #3C2A20; font-size: 1.125rem; font-weight: 600; padding: 1rem 2rem; border-radius: 9999px; text-align: center; text-decoration: none; box-sizing: border-box;">
                Registrarse
            </a>

            <!-- Texto pequeño -->
            <p style="font-size: 0.875rem; color: #7F5539; opacity: 0.8; margin: 0.5rem 0 1rem;">
                Basado en Pomodoro & Gamificación
            </p>

            <!-- Logo Focus -->
            <img src="/assets/focus_logo_letras.png" alt="Focus Logo" style="height: 50px; object-fit: contain;" />
        </div>

	</body>
</html>
